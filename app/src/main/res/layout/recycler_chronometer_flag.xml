<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lbl_time_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/timer_flag"
        android:textColor="@color/splashDarkColor"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_flag_recycler"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_flag_recycler"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_flag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lbl_position_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/font"
        android:text="1"
        android:textColor="@color/mainColor"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_flag_recycler"
        app:layout_constraintEnd_toEndOf="@+id/img_flag_recycler" />
</androidx.constraintlayout.widget.ConstraintLayout>